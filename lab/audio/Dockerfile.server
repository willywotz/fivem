FROM golang:1.21-alpine AS builder

WORKDIR /app
COPY go.mod go.sum ./
RUN go mod download

COPY server/ ./server/
WORKDIR /app/server
RUN go build -o audio-server .

FROM alpine:latest
RUN apk --no-cache add ca-certificates
WORKDIR /root/

COPY --from=builder /app/server/audio-server .

EXPOSE 8080

CMD ["./audio-server"]
